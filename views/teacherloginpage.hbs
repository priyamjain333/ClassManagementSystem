{{# if success}}
  <section class="success">
    <h3>Successful validation!!</h3>
  </section>
{{ else}}
  <div class="row">
    <div class="col-lg-4">

    </div>
    <div class="col-lg-4">
          <div class="card" style="padding: 10%;">
              <div class="card-body">
                    <h3>{{viewTitle}}</h3>
                    {{# if errors}}
                            <section class="errors" style="color: red;">
                              </ul>
                                {{# each errors }}
                                  <li> {{this.msg}}</li>
                                {{/each}}
                              </ul>
                            </section>

                          {{/if}}
                    <form action="/trlogin/submit" method="post">
                      <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" id="Idfield" name="tid" class="form-control" >
                      </div>
                      <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="passwordfield" name="trpassword" class="form-control" >
                      </div>
                      <button class="btn btn-danger btn-lg" type="submit" style="margin-left:30%;">Login</button>
                    </form>
              </div>
        </div>
    </div>
    <div class="col-lg-4">

    </div>



  </div>
{{/if}}


