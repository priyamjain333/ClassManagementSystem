<div class="row">
  <div class="col-lg-1">

  </div>
  <div class="col-lg-10">
    <div class="card" style="padding: 5%;">
      <div class="card-header" style="text-align: center;">
        <h3>{{viewTitle}}</h3>
      </div>
      <div class="card-body">
          <form action="/detailsfilled/{{outputid}}" method="POST">
          <input type="hidden" name="_id" value="{{outputid}}" >
          <div class="form-group">
            <label style="color: black;">Date</label>
            <input type="text" name="mdate"  required="true" class="form-control date" placeholder="Date" value="">
          </div>
            <div class="form-group">
              <label style="color: black;">batch</label>
              <input type="text" name="mbatch" required="true" class="form-control" placeholder="Batch" value="">
            </div>
            <div class="form-group">
                <label for="comment" style="color: black;">Remarks</label>
                <textarea class="form-control" required="true" rows="3"  name="mremarks"></textarea>
              </div>
              <div class="form-group">
                  <label for="comment" style="color: black;">Achievements</label>
                  <textarea class="form-control" required="true" rows="3"  name="machieve"></textarea>
                </div>
                <div class="form-group" style="text-align:center">
                  <button type="submit" class="btn btn-lg btn-danger"><i class="fa fa-database"></i>Add</button>
                </div>
          </form>
      </div>
      <div class="card-footer">

      </div>
    </div>
  </div>
  <div class="col-lg-1">

  </div>
</div>
